<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huo.myappgit.ui.fragment.viewpager.PagerFragment2">

    <ImageView
        android:id="@+id/ivBubble1"
        android:layout_width="0dp"
        android:scaleType="centerInside"
        android:layout_height="wrap_content"
        android:src="@mipmap/bubble3"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/ivBubble3"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginEnd="32dp"/>

    <ImageView
        android:id="@+id/ivBubble2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/bubble1"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginStart="32dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginEnd="32dp"/>

    <ImageView
        android:id="@+id/ivBubble3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/bubble2"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/ivBubble2"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginEnd="32dp"/>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="136dp"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvIntroduction"
            android:layout_centerHorizontal="true"
            android:text="@string/tips_and_tricks"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="20dp"/>

        <TextView
            android:id="@+id/tvIntroduction"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/tips_introduction"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="46dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
