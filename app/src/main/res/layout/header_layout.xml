<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_gank"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_140"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#559c9a0c"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_20">

    <ImageView
        android:id="@+id/rv_ss"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/github"
        app:layout_constraintLeft_toLeftOf="@+id/cv_gank"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/cv_gank"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/cv_gank"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_gank"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintVertical_bias="0.94"/>

</android.support.constraint.ConstraintLayout>