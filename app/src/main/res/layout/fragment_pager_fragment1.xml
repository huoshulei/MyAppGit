<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huo.myappgit.ui.fragment.viewpager.PagerFragment1"
    android:id="@+id/constraintLayout">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="136dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        tools:ignore="UselessParent"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/arsenal"
            android:textStyle="bold"
            android:id="@+id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tvIntroduction"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="20dp"/>

        <TextView
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/arsenal_introduction"
            android:id="@+id/tvIntroduction"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="46dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
