<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huo.myappgit.ui.fragment.viewpager.PagerFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@mipmap/tablet"
        android:id="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginEnd="90dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@mipmap/desktop"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="100dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginEnd="30dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="136dp"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginStart="32dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvIntroduction"
            android:layout_centerHorizontal="true"
            android:text="@string/welcome_to_gitdroid"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="20dp"/>

        <TextView
            android:id="@+id/tvIntroduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/welcome_introduction"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
